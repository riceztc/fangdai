/* 头部样式 */
.header {
  position: relative;
  height: 280rpx;
  margin-bottom: -40rpx;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100%;
  background-color: #10b981;
  border-bottom-left-radius: 48rpx;
  border-bottom-right-radius: 48rpx;
}

.header-content {
  position: relative;
  z-index: 10;
  padding: 80rpx 60rpx 40rpx;
  color: white;
}

.header .title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header .subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 表单卡片 */
.form-card {
  margin-top: 40rpx;
}

/* 输入框组 */
.input-group {
  position: relative;
  margin-bottom: 20rpx;
}

.input-suffix {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 28rpx;
  font-weight: normal;
}

/* 利率输入行 */
.rate-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.rate-label {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}

.rate-input {
  width: 120rpx;
  background-color: #f3f4f6;
  border-radius: 8rpx;
  padding: 10rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #10b981;
}

/* 还款方式样式 */
.payment-method {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 20rpx;
}

.payment-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.payment-desc {
  font-size: 24rpx;
  color: #999;
}

.payment-method.active .payment-desc {
  color: rgba(255, 255, 255, 0.7);
}

/* 计算按钮 */
.calculate-btn {
  margin: 40rpx 0;
  padding: 30rpx 0;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.calculate-btn::after {
  border: none;
}
